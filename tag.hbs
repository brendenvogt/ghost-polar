{{!< default}} {{> "navbar"}} <header id="blog-header" {{#if tag.feature_image}} class="has-cover" {{/if}}>
	<div class="inner">
		<h1 class="blog-name">{{tag.name}}</h1>
		<span class="blog-description">
			{{#if tag.description}}
			{{tag.description}}
			{{else}}
			{{t "Posts"}}: {{pagination.total}}
			{{/if}}
		</span>
		{{#if tag.feature_image}}
		<div class="blog-cover cover" style="background-image: url('{{img_url tag.feature_image}}');"></div>
		{{/if}}
	</div>
	</header>

	<div id="index" class="container">

		<main class="inner" role="main" style="margin-top: 4rem;">

			{{> "loop"}}

		</main>

	</div>