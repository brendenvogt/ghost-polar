<div class="extra-pagination">
	{{pagination}}
</div>

{{#foreach posts}}

<article class="{{post_class}}">
	<div>
		<header class="post-header">
			<h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
			<span class="post-meta">{{authors separator=", "}} {{tags prefix=(t "on ") separator=", "}} | <time datetime="{{date format='YYYY-MM-DD'}}">{{date
					format="DD MMM YYYY"}}</time></span>
			<div class="clear"></div>
		</header>

		{{#if feature_image}}<a href="{{url}}"><img src="{{feature_image}}" alt="" class="post-image"></a>{{/if}}

		<section class="post-excerpt">
			<p>{{excerpt}}&hellip;</p>
			<a href="{{url}}" class="readmore">Continue reading ðŸ‘‰</a>
		</section>
	</div>
</article>

{{/foreach}}

